<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.pidev.controller.event.CategoryViewController"
      spacing="0"
      styleClass="page-background"
      stylesheets="@../../css/atlantafx-custom.css"
      VBox.vgrow="ALWAYS">

    <!-- ===================== NAVBAR DYNAMIQUE ===================== -->

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                hbarPolicy="AS_NEEDED"
                vbarPolicy="AS_NEEDED"
                style="-fx-background-color: transparent; -fx-border-color: transparent;">

        <VBox spacing="0">

            <HBox style="-fx-background-color: white; -fx-padding: 15 40; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;"
                  alignment="CENTER_LEFT" spacing="20">

                <Button fx:id="backBtn" text="← Retour à la liste" onAction="#handleBack"
                        style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-font-size: 14px;
                               -fx-background-radius: 8; -fx-padding: 8 15; -fx-border-color: #cbd5e1;
                               -fx-border-width: 1; -fx-cursor: hand;"/>

                <VBox spacing="5">
                    <Label text="Détails de la Catégorie"
                           style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #1e293b;"/>
                    <Label text="Consultation des informations de la catégorie"
                           style="-fx-text-fill: #6c757d; -fx-font-size: 13px;"/>
                </VBox>
            </HBox>

            <VBox style="-fx-padding: 30; -fx-spacing: 25;">

                <VBox spacing="25" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 16;
                                          -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-border-radius: 16;
                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.03), 10, 0, 0, 2);">

                    <!-- EN-TÊTE CATÉGORIE -->
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label fx:id="iconLabel" text=""
                               style="-fx-font-size: 48px; -fx-background-color: #f8f9fa; -fx-padding: 15;
                                      -fx-background-radius: 12; -fx-border-color: #e2e8f0; -fx-border-width: 1;
                                      -fx-border-radius: 12;"/>
                        <VBox spacing="5">
                            <Label fx:id="nameLabel" text=""
                                   style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #1e293b;"/>
                            <Label text="Catégorie d'événement"
                                   style="-fx-text-fill: #64748b; -fx-font-size: 14px;"/>
                        </VBox>
                    </HBox>

                    <Separator style="-fx-background-color: #e9ecef;"/>

                    <GridPane hgap="30" vgap="25">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="33"/>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="33"/>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="34"/>
                        </columnConstraints>

                        <!-- Ligne 1 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="NOM" style="-fx-font-size: 11px; -fx-font-weight: 600; -fx-text-fill: #64748b;"/>
                            <Label fx:id="detailNameLabel" text=""
                                   style="-fx-font-size: 16px; -fx-font-weight: 500; -fx-text-fill: #1e293b;"/>
                        </VBox>

                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="STATUT" style="-fx-font-size: 11px; -fx-font-weight: 600; -fx-text-fill: #64748b;"/>
                            <Label fx:id="statusLabel" text=""
                                   style="-fx-padding: 4 12; -fx-background-radius: 20; -fx-font-size: 13px; -fx-font-weight: 600;"/>
                        </VBox>

                        <VBox spacing="8" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Label text="ICÔNE" style="-fx-font-size: 11px; -fx-font-weight: 600; -fx-text-fill: #64748b;"/>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Label fx:id="detailIconLabel" text="" style="-fx-font-size: 20px;"/>
                                <Label text="(emoji)" style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
                            </HBox>
                        </VBox>

                        <!-- Ligne 2 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="COULEUR" style="-fx-font-size: 11px; -fx-font-weight: 600; -fx-text-fill: #64748b;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Region fx:id="colorPreview"
                                        style="-fx-min-width: 24; -fx-min-height: 24; -fx-background-radius: 6;
                                               -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 6;"/>
                                <Label fx:id="colorHexLabel" text=""
                                       style="-fx-font-size: 14px; -fx-font-family: monospace; -fx-text-fill: #334155;"/>
                                <Label fx:id="colorNameLabel" text=""
                                       style="-fx-text-fill: #64748b; -fx-font-size: 13px;"/>
                            </HBox>
                        </VBox>

                        <!-- CRÉÉE LE - LIGNE CORRIGÉE -->
                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="CRÉÉE LE" style="-fx-font-size: 11px; -fx-font-weight: 600; -fx-text-fill: #64748b;"/>
                            <Label fx:id="createdAtLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #334155;"/>
                        </VBox>

                        <!-- MODIFIÉE LE - LIGNE CORRIGÉE -->
                        <VBox spacing="8" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <Label text="MODIFIÉE LE" style="-fx-font-size: 11px; -fx-font-weight: 600; -fx-text-fill: #64748b;"/>
                            <Label fx:id="updatedAtLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #334155;"/>
                        </VBox>
                    </GridPane>

                    <Separator style="-fx-background-color: #e9ecef;"/>

                    <!-- DESCRIPTION -->
                    <VBox spacing="12">
                        <Label text="DESCRIPTION" style="-fx-font-size: 11px; -fx-font-weight: 600; -fx-text-fill: #64748b;"/>
                        <Label fx:id="descriptionLabel" wrapText="true"
                               style="-fx-background-color: #f8fafc; -fx-padding: 20; -fx-background-radius: 12;
                                      -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-border-radius: 12;
                                      -fx-text-fill: #334155;"/>
                    </VBox>

                    <!-- MÉTADONNÉES -->
                    <HBox spacing="30" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                        <Label fx:id="createdByLabel" text="" style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
                        <Label fx:id="updatedByLabel" text="" style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
                    </HBox>
                </VBox>

                <!-- BOUTON FERMER -->
                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                    <Button text="Fermer" onAction="#handleBack"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;
                                   -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;
                                   -fx-font-weight: 600;"/>
                </HBox>

                <!-- Footer -->
                <HBox alignment="CENTER" style="-fx-padding: 20 0 10 0;">
                    <Label text="© 2026 EventFlow - Gestion des catégories"
                           style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
                </HBox>

            </VBox>
        </VBox>
    </ScrollPane>
</VBox>