<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: white; -fx-background-radius: 16; -fx-border-radius: 16;
                   -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-padding: 14;"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.pidev.controller.budget.BudgetCardController">

    <VBox spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox spacing="10">
            <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-font-weight: 900; -fx-text-fill: #0f172a;" text="Budget" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="rentLabel" style="-fx-font-size: 14px; -fx-font-weight: 900;" text="0,00 DT" />
        </HBox>

        <HBox spacing="10">
            <Label fx:id="eventLabelPrefix" text="Événement:" style="-fx-text-fill:#334155; -fx-font-weight:700;" />
            <Label fx:id="eventLabel" style="-fx-text-fill:#334155; -fx-font-weight:700;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="statusLabel" style="-fx-background-color:#ecfdf5; -fx-text-fill:#047857; -fx-font-weight:900;
                           -fx-padding:4 10; -fx-background-radius:999;" text="OK" />
        </HBox>

        <Separator />

        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label style="-fx-text-fill:#64748b; -fx-font-size:12px;" text="Budget initial" />
                <Label fx:id="initialLabel" style="-fx-font-weight:900; -fx-text-fill:#0f172a;" text="0,00 DT" />
            </VBox>

            <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label style="-fx-text-fill:#64748b; -fx-font-size:12px;" text="Dépenses" />
                <Label fx:id="expensesLabel" style="-fx-font-weight:900; -fx-text-fill:#dc2626;" text="0,00 DT" />
            </VBox>

            <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label style="-fx-text-fill:#64748b; -fx-font-size:12px;" text="Revenus" />
                <Label fx:id="revenueLabel" style="-fx-font-weight:900; -fx-text-fill:#2563eb;" text="0,00 DT" />
            </VBox>

            <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label style="-fx-text-fill:#64748b; -fx-font-size:12px;" text="Rentabilité" />
                <Label fx:id="rent2Label" style="-fx-font-weight:900; -fx-text-fill:#0f172a;" text="0,00 DT" />
            </VBox>
        </GridPane>

        <HBox spacing="10" style="-fx-padding: 8 0 0 0;">
            <Button fx:id="detailsBtn" style="-fx-background-color:#2563eb; -fx-text-fill:white; -fx-font-weight:800;
                            -fx-background-radius:12; -fx-padding: 8 14;" text="Détails" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="editBtn" style="-fx-background-color:#e0f2fe; -fx-text-fill:#0369a1; -fx-font-weight:900;
                            -fx-background-radius:12; -fx-padding: 8 12;" text="Modifier" />

            <Button fx:id="deleteBtn" style="-fx-background-color:#fee2e2; -fx-text-fill:#b91c1c; -fx-font-weight:900;
                            -fx-background-radius:12; -fx-padding: 8 12;" text="Supprimer" />
        </HBox>
    </VBox>
</AnchorPane>