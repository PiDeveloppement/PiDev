<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="900" prefWidth="1600"
            style="-fx-background-color: #f8fafc;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.pidev.controller.sponsor.SponsorAdminController">

    <center>
        <ScrollPane fx:id="rootScroll"
                    fitToHeight="true" fitToWidth="true"
                    style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox spacing="0" style="-fx-padding: 0 35 20 35;">

                <!-- HEADER + STATS -->
                <HBox alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-padding: 25 40;
                             -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;">
                    <VBox spacing="5">
                        <Label text="Gestion des Sponsors (Admin)"
                               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />
                        <Label text="Vue globale"
                               style="-fx-text-fill: #64748b; -fx-font-size: 15px;" />
                    </VBox>

                    <Region HBox.hgrow="ALWAYS" />

                    <HBox alignment="CENTER" spacing="15">
                        <VBox alignment="CENTER" spacing="2"
                              style="-fx-padding: 16 28; -fx-background-color: #f0fdf4; -fx-background-radius: 10;
                                     -fx-border-color: #bbf7d0; -fx-border-width: 1; -fx-border-radius: 10;">
                            <Label fx:id="totalSponsorsLabel" text="0"
                                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #16a34a;" />
                            <Label text="Sponsors"
                                   style="-fx-text-fill: #22c55e; -fx-font-size: 12px;" />
                        </VBox>

                        <VBox alignment="CENTER" spacing="2"
                              style="-fx-padding: 16 28; -fx-background-color: #eff6ff; -fx-background-radius: 10;
                                     -fx-border-color: #bfdbfe; -fx-border-width: 1; -fx-border-radius: 10;">
                            <Label fx:id="totalContributionLabel" text="0,00 DT"
                                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2563eb;" />
                            <Label text="Contribution Totale"
                                   style="-fx-text-fill: #3b82f6; -fx-font-size: 12px;" />
                        </VBox>

                        <VBox alignment="CENTER" spacing="2"
                              style="-fx-padding: 16 28; -fx-background-color: #fef3c7; -fx-background-radius: 10;
                                     -fx-border-color: #fcd34d; -fx-border-width: 1; -fx-border-radius: 10;">
                            <Label fx:id="avgContributionLabel" text="0,00 DT"
                                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #d97706;" />
                            <Label text="Moyenne/Sponsor"
                                   style="-fx-text-fill: #f59e0b; -fx-font-size: 12px;" />
                        </VBox>
                    </HBox>
                </HBox>

                <!-- ACTION BAR -->
                <HBox alignment="CENTER_LEFT" spacing="20"
                      style="-fx-background-color: #f1f5f9; -fx-padding: 25 40;
                             -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;">

                    <TextField fx:id="searchField" promptText="ðŸ” Rechercher..."
                               style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 12 18;
                                      -fx-pref-width: 350; -fx-border-color: #cbd5e1; -fx-border-width: 1;
                                      -fx-border-radius: 10; -fx-font-size: 14px;" />

                    <ComboBox fx:id="companyFilter" prefWidth="200" promptText="ðŸ¢ Entreprise"
                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 12 18;
                                     -fx-border-color: #cbd5e1; -fx-border-width: 1; -fx-border-radius: 10;
                                     -fx-font-size: 14px;" />

                    <ComboBox fx:id="eventFilter" prefWidth="200" promptText="ðŸ“… Ã‰vÃ©nement"
                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 12 18;
                                     -fx-border-color: #cbd5e1; -fx-border-width: 1; -fx-border-radius: 10;
                                     -fx-font-size: 14px;" />

                    <Region HBox.hgrow="ALWAYS" />

                    <Button fx:id="addSponsorBtn" text="âž• Nouveau Sponsor"
                            style="-fx-background-color: linear-gradient(to right, #10b981, #059669);
                                   -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;
                                   -fx-background-radius: 10; -fx-padding: 12 26;" />
                </HBox>

                <!-- GRID -->
                <VBox spacing="12" style="-fx-padding: 30 40;">
                    <Label text="ðŸ“‹ Liste des Sponsors"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #334155;" />

                    <ScrollPane fx:id="cardsScroll" fitToWidth="true"
                                style="-fx-background-color: transparent; -fx-border-color: transparent;">
                        <content>
                            <TilePane fx:id="cardsPane"
                                      prefColumns="3"
                                      hgap="14" vgap="14"
                                      padding="10"
                                      style="-fx-background-color: transparent;">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                            </TilePane>
                        </content>
                    </ScrollPane>

                    <Label fx:id="statusLabel" text="--"
                           style="-fx-text-fill: #64748b; -fx-font-size: 14px;" />
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
