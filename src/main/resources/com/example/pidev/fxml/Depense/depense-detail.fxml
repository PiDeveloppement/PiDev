<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.pidev.controller.depense.DepenseDetailsController"
            style="-fx-background-color:white; -fx-padding:20;">

    <VBox spacing="14" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <Label text="Détails de la Dépense"
               style="-fx-font-size:22px; -fx-font-weight:900; -fx-text-fill:#0f172a;"/>

        <HBox spacing="16">
            <VBox spacing="10" HBox.hgrow="ALWAYS"
                  style="-fx-background-color:#f8fafc; -fx-background-radius:16; -fx-padding:16; -fx-border-color:#e2e8f0; -fx-border-radius:16;">
                <Label text="Informations" style="-fx-font-size:16px; -fx-font-weight:800;"/>
                <GridPane hgap="12" vgap="10">
                    <Label text="ID :" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Budget ID :" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="budgetIdLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Description :" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="descLabel" wrapText="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Catégorie :" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="categoryLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Montant :" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="amountLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"
                           style="-fx-font-weight:900; -fx-text-fill:#059669;"/>

                    <Label text="Date :" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="dateLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Statut :" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="statusLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="Created by :" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="createdByLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Label text="Validated by :" GridPane.rowIndex="8" GridPane.columnIndex="0" style="-fx-font-weight:800;"/>
                    <Label fx:id="validatedByLabel" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
        </HBox>

        <HBox alignment="CENTER_RIGHT">
            <Button text="OK"
                    onAction="#onClose"
                    style="-fx-background-color:#2563eb; -fx-text-fill:white; -fx-font-weight:900;
                           -fx-background-radius:12; -fx-padding:10 18;"/>
        </HBox>

    </VBox>
</AnchorPane>
