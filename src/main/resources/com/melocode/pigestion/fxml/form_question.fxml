<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.melocode.pigestion.controller.QuestionController">
    <content>
        <VBox spacing="30.0" style="-fx-padding: 40;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="✨ Éditeur de Questions" textFill="#1e293b">
                            <font><Font name="System Bold" size="28.0" /></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button onAction="#switchToList" prefHeight="40.0" style="-fx-background-color: white; -fx-text-fill: #4f46e5; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;" text="Voir la liste des questions ➡" />
                    </children>
                </HBox>

                <VBox spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 5); -fx-padding: 35;">
                    <children>
                        <Label text="Informations de la Question" textFill="#64748b">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>

                        <GridPane hgap="25.0" vgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Événement associé" textFill="#475569" />
                                        <ComboBox fx:id="comboEvent" maxWidth="Infinity" prefHeight="45.0" promptText="Choisir l'événement" style="-fx-background-radius: 10; -fx-background-color: #f1f5f9; -fx-border-color: #e2e8f0; -fx-border-radius: 10;" />
                                    </children>
                                </VBox>

                                <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Nombre de points" textFill="#475569" />
                                        <TextField fx:id="txtPoints" prefHeight="45.0" promptText="Ex: 10" style="-fx-background-radius: 10; -fx-background-color: #f1f5f9; -fx-border-color: #e2e8f0; -fx-border-radius: 10;" />
                                    </children>
                                </VBox>

                                <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Énoncé de la Question" textFill="#475569" />
                                        <TextArea fx:id="txtTexte" prefHeight="100.0" promptText="Saisissez l'énoncé ici..." style="-fx-background-radius: 10; -fx-background-color: #f1f5f9; -fx-border-color: #e2e8f0; -fx-border-radius: 10;" wrapText="true" />
                                        <Label fx:id="lblSuggestionIA" style="-fx-font-size: 11px; -fx-italic: true;" text="" />
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>

                        <VBox spacing="8.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Réponse attendue" textFill="#475569" />
                                <TextField fx:id="txtReponse" prefHeight="45.0" promptText="Saisissez la bonne réponse" style="-fx-background-radius: 10; -fx-background-color: #f1f5f9; -fx-border-color: #e2e8f0; -fx-border-radius: 10;" />
                            </children>
                        </VBox>

                        <Separator style="-fx-padding: 10 0;" />

                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <Button onAction="#viderChamps" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: white; -fx-text-fill: #64748b; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;" text="Réinitialiser" />
                                <Button onAction="#handleSave" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #4f46e5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(79, 70, 229, 0.3), 10, 0, 0, 5);" text="ENREGISTRER" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>