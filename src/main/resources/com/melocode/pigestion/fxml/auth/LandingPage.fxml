<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox prefHeight="800" prefWidth="1400" spacing="0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.melocode.pigestion.controller.auth.LandingPageController">

    <HBox alignment="CENTER_LEFT" prefHeight="80" style="-fx-background-color: white; -fx-padding: 15 60; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;">

        <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                <Image url="@../../images/logo.png" />
            </ImageView>
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="EventFlow" />
        </HBox>

        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER" spacing="30">
            <Button onAction="#handleEvenement" style="-fx-background-color: transparent; -fx-text-fill: #1e293b; -fx-font-size: 16px; -fx-font-weight: 500; -fx-cursor: hand;" text="Événement" />
            <Button onAction="#handleQuestionnaire" style="-fx-background-color: transparent; -fx-text-fill: #1e293b; -fx-font-size: 16px; -fx-font-weight: 500; -fx-cursor: hand;" text="Questionnaire" />
            <Button onAction="#handleFeedback" style="-fx-background-color: transparent; -fx-text-fill: #1e293b; -fx-font-size: 16px; -fx-font-weight: 500; -fx-cursor: hand;" text="Feedback" />
            <Button onAction="#handleContact" style="-fx-background-color: transparent; -fx-text-fill: #1e293b; -fx-font-size: 16px; -fx-font-weight: 500; -fx-cursor: hand;" text="Contact" />
        </HBox>

        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER_RIGHT" spacing="15">
            <Button onAction="#handleLogin" style="-fx-background-color: transparent; -fx-text-fill: #0D47A1; -fx-font-weight: bold; -fx-border-color: #0D47A1; -fx-border-width: 1.5; -fx-border-radius: 8; -fx-padding: 8 24; -fx-cursor: hand;" text="Connexion" />
            <Button onAction="#handleSignup" style="-fx-background-color: #0D47A1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 24; -fx-cursor: hand;" text="Inscription" />
        </HBox>
    </HBox>

    <StackPane fx:id="contentArea" style="-fx-background-color: #f8fafc;" VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="20">
            <Label text="Bienvenue sur EventFlow" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
            <Label text="Cliquez sur Feedback pour voir les avis clients" style="-fx-font-size: 18px; -fx-text-fill: #64748b;"/>
        </VBox>
    </StackPane>

</VBox>