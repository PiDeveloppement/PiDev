<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.melocode.pigestion.controller.QuestionController">
    <children>
        <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>

                <VBox prefWidth="320.0" spacing="12.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <children>
                        <Label text="Éditeur de Questions" textFill="#34495e">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Label>
                        <Separator />

                        <Label text="Sélectionner l'Événement" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboEvent" maxWidth="Infinity" promptText="Choisir un événement..." style="-fx-cursor: hand;" />

                        <Label text="Texte de la Question" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="txtTexte" prefHeight="120.0" promptText="Saisissez votre question ici..." wrapText="true" />

                        <Label text="Bonne Réponse" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtReponse" promptText="La réponse attendue" />

                        <Label text="Points" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtPoints" promptText="Ex: 5" />

                        <Region VBox.vgrow="ALWAYS" />

                        <Button maxWidth="Infinity" onAction="#handleSave" prefHeight="40.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="ENREGISTRER" />
                        <Button maxWidth="Infinity" onAction="#viderChampsSaufCombo" prefHeight="30.0" style="-fx-cursor: hand;" text="Vider les champs / Nouveau" />
                    </children>
                </VBox>

                <VBox HBox.hgrow="ALWAYS" spacing="10.0">
                    <children>
                        <Label text="Liste des Questions de l'Événement Sélectionné" textFill="#2c3e50">
                            <font><Font name="System Italic" size="14.0" /></font>
                        </Label>
                        <TableView fx:id="tableQuestions" style="-fx-background-radius: 10; -fx-overflow-hidden: true;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colTexte" prefWidth="400.0" text="Question" />
                                <TableColumn fx:id="colReponse" prefWidth="150.0" text="Réponse" />
                                <TableColumn fx:id="colPoints" prefWidth="80.0" text="Points" />
                                <TableColumn fx:id="colActions" prefWidth="200.0" text="Actions" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </HBox>
    </children>
</AnchorPane>